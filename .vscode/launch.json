{
  "version": "0.2.0",
  "configurations": [{
    "name": "Launch Chrome against localhost, with sourcemaps",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:4200/",
    "runtimeExecutable": "/usr/bin/chromium",
    "runtimeArgs": [
      "--user-data-dir",
      "--remote-debugging-port=9222"
    ],
    "sourceMaps": true,
    "trace": true,
    "webRoot": "${workspaceRoot}",
    "userDataDir": "${workspaceRoot}/.vscode/chrome"
  }, {
    "name": "Attach",
    "type": "chrome",
    "request": "attach",
    "port": 9222,
    "url": "http://localhost:4200",
    "runtimeExecutable": "/usr/bin/chromium",
    "sourceMaps": true,
    "webRoot": "${workspaceRoot}"
  }]
}
